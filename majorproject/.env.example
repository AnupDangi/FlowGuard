# Environment Variables Configuration
# Copy this file to .env and update with your values

# ========== Kafka Configuration ==========
KAFKA_BOOTSTRAP_SERVERS=localhost:19092,localhost:19093,localhost:19094
KAFKA_CLIENT_ID=events-gateway

# ========== Events Gateway Configuration ==========
EVENTS_GATEWAY_HOST=0.0.0.0
EVENTS_GATEWAY_PORT=8000
EVENTS_GATEWAY_RELOAD=true

# ========== Environment ==========
ENVIRONMENT=development
LOG_LEVEL=INFO

# ========== Snowflake Configuration ==========
# Update these with your actual Snowflake credentials
SNOWFLAKE_ACCOUNT=YOUR_ACCOUNT.REGION
SNOWFLAKE_USER=YOUR_USERNAME
SNOWFLAKE_PASSWORD=YOUR_PASSWORD
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=FLOWGUARD_DB
SNOWFLAKE_SCHEMA=BRONZE

# ========== Batch Processing Configuration ==========
BATCH_SIZE=100
BATCH_TIMEOUT=5.0
CONSUMER_GROUP_ID=bronze-consumer-group

# ========== Optional: Future Use ==========
